<?xml version="1.0" encoding="UTF-8"?>
<!-- 
   Tracks security feedback, staffing, and incident reports 
   for different exhibitions in the library.
   Helps manage security teams and incident resolution.
-->

<!DOCTYPE securityInfo [
  <!ELEMENT securityInfo (exhibitionSecurity+)>
  
  <!-- Each exhibition has its own security record -->
  <!ELEMENT exhibitionSecurity 
    (exhibitionId, invalidTicketCount, securityTeam, feedbackId*, 
     teamSize, securityMeasures, conflicts+, numberOfConflicts)>
  <!ATTLIST exhibitionSecurity securityId CDATA #REQUIRED>
  
  <!-- Basic data fields -->
  <!ELEMENT exhibitionId (#PCDATA)>             <!-- Links to exhibition.xml -->
  <!ELEMENT invalidTicketCount (#PCDATA)>       <!-- Fraudulent ticket count -->
  <!ELEMENT securityTeam (member+)>             <!-- List of security staff -->
  <!ELEMENT member (#PCDATA)>                   <!-- Name of one staff member -->
  <!ELEMENT feedbackId (#PCDATA)>               <!-- Links to feedback.xml -->
  <!ELEMENT teamSize (#PCDATA)>                 <!-- Number of security staff -->
  <!ELEMENT securityMeasures (#PCDATA)>         <!-- Equipment and procedures -->

  <!-- Conflict reporting section -->
  <!ELEMENT conflicts (conflict*)>              <!-- Each block holds conflicts -->
  <!ELEMENT conflict (securityTeamConflict)>    <!-- One conflict entry -->
  <!ELEMENT securityTeamConflict (conflictResolved*)>
  <!ATTLIST securityTeamConflict conflictMember CDATA #REQUIRED>

  <!-- Whether the conflict was resolved -->
  <!ELEMENT conflictResolved (#PCDATA)>

  <!-- Total number of conflicts recorded -->
  <!ELEMENT numberOfConflicts (#PCDATA)>
]>

<!-- Security Data Records -->
<securityInfo>

  <!-- Security assignment for Exhibition 207 -->
  <exhibitionSecurity securityId="SEC001">
    <exhibitionId>207</exhibitionId>
    <invalidTicketCount>1</invalidTicketCount>

    <!-- Staff on duty -->
    <securityTeam>
      <member>John Smith</member>
      <member>Maria Garcia</member>
      <member>Robert Johnson</member>
      <member>Sarah Williams</member>
    </securityTeam>

    <!-- Feedback connected to encounters -->
    <feedbackId>F001</feedbackId>
    <feedbackId>F002</feedbackId>

    <teamSize>4</teamSize>
    <securityMeasures>CCTV surveillance, ticket inspection, security personnel</securityMeasures>

    <!-- One recorded conflict -->
    <conflicts>
      <conflict>
        <securityTeamConflict conflictMember="John Smith">
          <conflictResolved>Yes</conflictResolved>
        </securityTeamConflict>
      </conflict>
    </conflicts>

    <!-- Total conflicts counted -->
    <numberOfConflicts>1</numberOfConflicts>
  </exhibitionSecurity>


  <!-- Security assignment for Exhibition 208 -->
  <exhibitionSecurity securityId="SEC002">
