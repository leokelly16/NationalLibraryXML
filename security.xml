<?xml version="1.0" encoding="UTF-8"?>
<!-- 
   Tracks security feedback, staffing, and incident reports for different exhibitions.
   For management of teams, and security protocol
-->

<!DOCTYPE securityInfo [
  <!ELEMENT securityInfo (exhibitionSecurity+)>
  
  <!-- Individual security assignment for each exhibition -->
  <!ELEMENT exhibitionSecurity (exhibitionId, invalidTicketCount, securityTeam, feedbackId*, teamSize, securityMeasures)>
  <!ATTLIST exhibitionSecurity securityId CDATA #REQUIRED>
  
  <!-- Security data fields -->
  <!ELEMENT exhibitionId (#PCDATA)>          <!-- Links to exhibition.xml -->
  <!ELEMENT invalidTicketCount (#PCDATA)>    <!-- Number of fraudulent tickets caught -->
  <!ELEMENT securityTeam (member+)>          <!-- List of security personnel (properly structured) -->
  <!ELEMENT member (#PCDATA)>                <!-- Individual security staff member name -->
  <!ELEMENT feedbackId (#PCDATA)>            <!-- Links to relevant feedback records -->
  <!ELEMENT teamSize (#PCDATA)>              <!-- Number of security staff -->
  <!ELEMENT securityMeasures (#PCDATA)>      <!-- Equipment and procedures used -->
]>

<!-- Security Data Records -->
