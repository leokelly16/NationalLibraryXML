<?xml version="1.0" encoding="UTF-8"?>

<!-- DTD defining the structure of the chatbot data -->
<!DOCTYPE chatbot[
  <!-- Root element contains multiple chatbotSession elements -->
  <!ELEMENT chatbot (chatbotSession*)>

  <!-- Each session must have a visitorID attribute -->
  <!ATTLIST chatbotSession visitorID CDATA #REQUIRED>

  <!-- Structure of a chatbotSession -->
  <!ELEMENT chatbotSession (language,sessionID,usedChatbot,sessionInMinutes,boughtTickets)>

  <!-- Basic text elements -->
  <!ELEMENT language (#PCDATA)>
  <!ELEMENT sessionID (#PCDATA)>
  <!ELEMENT usedChatbot (#PCDATA)>
  <!ELEMENT sessionInMinutes (#PCDATA)>
  <!ELEMENT boughtTickets (#PCDATA)>
]>

<!-- Root element -->
<chatbot>

  <!-- Session 1: Visitor used chatbot and bought tickets -->
  <chatbotSession visitorID="72981">
    <language>English</language>
    <sessionID>100</sessionID>
    <usedChatbot>Yes</usedChatbot>
    <sessionInMinutes>10</sessionInMinutes>
    <boughtTickets>Yes</boughtTickets>
  </chatbotSession>

  <!-- Session 2: Visitor did not use chatbot -->
  <chatbotSession visitorID="72982">
    <language>English</language>
    <sessionID>101</sessionID>
    <usedChatbot>No</usedChatbot>
    <sessionInMinutes>0</sessionInMinutes>
    <boughtTickets>No</boughtTickets>
  </chatbotSession>

  <!-- Session 3: Long session, no ticket purchase -->
  <chatbotSession visitorID="72983">
    <language>Spanish</language>
    <sessionID>102</sessionID>
    <usedChatbot>Yes</usedChatbot>
    <sessionInMinutes>25</sessionInMinutes>
    <boughtTickets>No</boughtTickets>
  </chatbotSession>

  <!-- Session 4: Short session, bought tickets -->
  <chatbotSession visitorID="72984">
    <language>French</language>
    <sessionID>103</sessionID>
    <usedChatbot>Yes</usedChatbot>
    <sessionInMinutes>3</sessionInMinutes>
    <boughtTickets>Yes</boughtTickets>
  </chatbotSession>

  <!-- Session 5: Chatbot used and tickets purchased -->
  <chatbotSession visitorID="72985">
    <language>Greek</language>
    <sessionID>104</sessionID>
    <usedChatbot>Yes</usedChatbot>
    <sessionInMinutes>8</sessionInMinutes>
    <boughtTickets>Yes</boughtTickets>
  </chatbotSession>

</chatbot>
