<?xml version="1.0" encoding="UTF-8"?>

<!-- DTD defining structure of feedback records -->
<!DOCTYPE feedbacks [

  <!-- Root element containing one or more feedback entries -->
  <!ELEMENT feedbacks (feedback+)>

  <!-- A feedback entry includes visitor info, exhibition visited, and optional rating/response -->
  <!ELEMENT feedback (visitor, exhibition, gaveFeedback, rating?, responseStatus?)>

  <!-- Each feedback entry must have a unique ID -->
  <!ATTLIST feedback feedbackID CDATA #REQUIRED>

  <!-- Visitor element: empty but holds an ID attribute -->
  <!ELEMENT visitor EMPTY>
  <!ATTLIST visitor id CDATA #REQUIRED>

  <!-- Exhibition element: empty but holds an ID attribute -->
  <!ELEMENT exhibition EMPTY>
  <!ATTLIST exhibition id CDATA #REQUIRED>

  <!-- Basic text fields -->
  <!ELEMENT gaveFeedback (#PCDATA)>
  <!ELEMENT rating (#PCDATA)>
  <!ELEMENT responseStatus (#PCDATA)>

]>

<!-- Root element for all feedback entries -->
