<?xml version="1.0" encoding="UTF-8"?>
<!-- Root element containing all bookings -->

<!DOCTYPE bookings [
<!-- bookings must contain one or more booking elements -->
  <!ELEMENT bookings (booking+)> 

<!-- Each booking has a date, billing info, and visitors -->
  <!ELEMENT booking (dateOfBooking, billing, visitors)> 
<!-- bookingId is a required attribute -->
  <!ATTLIST booking bookingId CDATA #REQUIRED> 
  
<!-- Booking date as text -->
  <!ELEMENT dateOfBooking (#PCDATA)> 

<!-- Billing contains an order ID and amount paid -->
  <!ELEMENT billing (orderId, amountPaid)>
<!-- Order ID as text -->  
  <!ELEMENT orderId (#PCDATA)>
<!-- Amount paid as text -->  
  <!ELEMENT amountPaid (#PCDATA)> 

<!-- One or more visitors in each booking -->
  <!ELEMENT visitors (visitor+)> 

<!-- Visitor element has no inner text -->
  <!ELEMENT visitor EMPTY>
<!-- Visitor must have an id attribute -->  
  <!ATTLIST visitor id CDATA #REQUIRED> 
]>

