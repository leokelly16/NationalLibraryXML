<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE bookings [
  <!ELEMENT bookings (booking+)>
  <!ELEMENT booking (dateOfBooking, billing, visitors)>
  <!ATTLIST booking bookingId CDATA #REQUIRED>
  <!ELEMENT dateOfBooking (#PCDATA)>
  <!ELEMENT billing (orderId, orderDate, amountPaid)>
  <!ELEMENT orderId (#PCDATA)>
  <!ELEMENT orderDate (#PCDATA)>
  <!ELEMENT amountPaid (#PCDATA)>
  <!ELEMENT visitors (visitor*)>
  <!ATTLIST visitor id CDATA #REQUIRED>
]>
<bookings>
  <booking bookingId="45678">
    <dateOfBooking>2004-04-15</dateOfBooking>
    <billing>
      <orderId>1234</orderId>
      <orderDate>2004-04-15</orderDate>
      <amountPaid>200 euros</amountPaid>
    </billing>
    <visitors>
      <visitor id="12345" />
    </visitors>
  </booking>
</bookings>
